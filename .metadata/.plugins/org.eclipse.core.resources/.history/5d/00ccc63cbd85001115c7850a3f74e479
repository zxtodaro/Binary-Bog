package com.zxtodaro.binarybog;

import android.content.Context;
import android.content.res.Resources;
import android.graphics.Bitmap;
import android.graphics.BitmapFactory;
import android.graphics.Canvas;
import android.graphics.drawable.Drawable;
import android.os.Handler;
import android.view.SurfaceHolder;

public class EnvThread extends Thread {
	
	private Environment gameEnv;
	private Context mContext;
	private SurfaceHolder mSurfHolder;
	private boolean run = false;
	
	//Constructor
	public EnvThread(Environment e) {
		gameEnv = e;
		mSurfHolder = gameEnv.getHolder();
	}
	
	public void setRun(boolean b) {
		run = b;
	}

	@Override
	public void run() {
		Canvas c = null;
		while (run) {
			c = mSurfHolder.lockCanvas();
			
			if (canvas!= null) {
				gameEnv.doDraw(canvas);
			}
			
		}
		
	}
	
}
